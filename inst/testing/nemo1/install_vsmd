)

apt-get install virtualenv
virtualenv venv
. venv/bin/activate

pip install -r requirements.txt 

export PYTHONPATH="$PYTHONPATH:$PWD/lib/python3/"

mkdir -p /services/etc/nemo/
touch /services/etc/nemo/nemo.conf
echo "[vsmd]" >> /services/etc/nemo/nemo.conf

